<Window x:Class="Molitio.AddNote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Molitio"
        mc:Ignorable="d"
        Title="AddNote" Height="250" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="2" x:Name="btnEditNote" Content="Edit Note" HorizontalAlignment="Center" VerticalAlignment="Center" Width="230"  Height="20" Click="btnEditNotes_Click"/>
        <TextBox Grid.Row="0" x:Name="tbTitleName" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Title" VerticalAlignment="Center" Width="230" Height="23" MouseDoubleClick="tbTitleName_TextChanged" />
        <TextBox Grid.Row="1" x:Name="tbDescription" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Notes" VerticalAlignment="Center" Width="230" Height="150" MouseDoubleClick="tbDescription_TextChanged"/>
    </Grid>
</Window>
