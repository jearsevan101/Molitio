<Window x:Class="Molitio.TaskLists"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Molitio"
        mc:Ignorable="d"
       Height="37" 
       Width="200"
       WindowStyle="None"
       ResizeMode="NoResize"
       AllowsTransparency="True">
    <Border Background="#0000">
        <Grid>
            <Label x:Name="lblTaskName" Content="Task Name" HorizontalAlignment="Left" Margin="3,-1,0,0" VerticalAlignment="Top"/>
            <Label Content="Due:" HorizontalAlignment="Left" Margin="3,13,0,0" VerticalAlignment="Top" FontSize="8"/>
            <Label x:Name="lblDate" Content="27 Oktober 2023" HorizontalAlignment="Left" Margin="21,13,0,0" VerticalAlignment="Top" FontSize="8"/>
            <Button x:Name="btnDelete" Content="X" HorizontalAlignment="right" Margin="0,8,8,0" VerticalAlignment="Top" Width="18" Click="btnDelete_Click"/>
        </Grid>
    </Border>
</Window>
