<Window x:Class="Molitio.MVVM.View.AddProjectNameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Molitio.MVVM.View"
        mc:Ignorable="d"
        Height="75" 
        Width="250"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    <Border Background="#0000">
        <Grid>
            <TextBox x:Name="tbToDoListName" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="To Do List Name..." VerticalAlignment="Top" Width="230" Height="23"/>

            <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="230" Height="20" Click="btnAdd_Click"/>
        </Grid>
    </Border>
</Window>

