<Window x:Class="Molitio.MVVM.View.DailyTaskView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Molitio.MVVM.View"
        mc:Ignorable="d"
        Height="255" 
        Width="250"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Border Background="#0000">
        <Grid>
            <Button x:Name="btnAddDailyTask" Content="Add Daily Task" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="230" Grid.Row="1" Height="20" Click="btnAddDailyTask_Click"/>
            <TextBox x:Name="tbTaskName" HorizontalAlignment="Center" Margin="0,41,0,0" TextWrapping="Wrap" Text="Task Name..." VerticalAlignment="Top" Width="230" Height="23" TextChanged="TextBox_TextChanged"/>
            <TextBox x:Name="tbDescription" HorizontalAlignment="Center" Margin="0,74,0,0" TextWrapping="Wrap" Text="Description..." VerticalAlignment="Top" Width="230" Height="93"/>
            <Label Content="Add New Daily Task" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Border>
</Window>


